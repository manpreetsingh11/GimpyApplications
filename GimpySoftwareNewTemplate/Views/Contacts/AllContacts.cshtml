            });

            $('.tdedit').click(function () {
                var url = $(this).attr('href');
                var width = window.innerWidth - 100;
                $.colorbox({
                    href: url,
                    iframe: true,
                    height: 600,
                    width: width,
                    onClosed: function () {
                        getresult();
                    },
                    transition: "none",
                    fadeOut: 0
                });
                return false;
            });

            $('#tableWithDynamicRows tbody').on('click', 'tr', function () {
                if (!checkboxClicked) {
                    cid = $(this).find("td.tdid input").val();
                    var url = "ContactDetail?cid=" + cid;
