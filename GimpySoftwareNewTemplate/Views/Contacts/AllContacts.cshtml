                        //    ]
                        //});
                        $('.tdedit').click(function () {
                            var url = $(this).attr('href');
                            var width = window.innerWidth - 100;
                            $.colorbox({
                                href: url,
                                iframe: true,
                                height: 600,
                                width: width,
                                onClosed: function () {

                                    getresult();

                                },
                                transition: "none",
                                fadeOut: 0
                            });
                            return false;
                        });
                    }
                    else {

