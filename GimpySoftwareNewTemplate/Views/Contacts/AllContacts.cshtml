                    $('table td:not(:first-child, :last-child)')
                    $.colorbox({ href: url, iframe: true, height: 500, width: width });
                }
                else {
                    checkboxClicked = false;
                }
            });

            $("#tblcompany ").delegate("tr.rows", "click", function () {
                if (!checkboxClicked) {
                    cid = $(this).find("td.tdid input").val();
