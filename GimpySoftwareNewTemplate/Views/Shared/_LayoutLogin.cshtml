<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta charset="utf-8" />
    <title>Account- @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/pages/ico/60.png")">
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/pages/ico/76.png")">
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Content/pages/ico/120.png")">
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Content/pages/ico/152.png")">
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta content="" name="description" />
    <meta content="" name="author" />
    @Styles.Render("~/Content/login")
    <!--[if lte IE 9]>
        <link href="pages/css/ie9.css" rel="stylesheet" type="text/css" />
    <![endif]-->
    <script type="text/javascript">
        window.onload = function () {
            // fix for windows 8
            if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
                document.head.innerHTML += '<link rel="stylesheet" type="text/css" href="~/Content/pages/css/windows.chrome.fix.css" />'
        }
    </script>
    <style>
        .logincrumb > li {
            list-style-type: none;
            padding: 10px 10px;
            float: right;
            font-family: 'Montserrat';
            font-size: 13px;
            /*border-bottom:2px solid black;*/
            /*padding-right:3px;*/
            /*border-left:1px solid rgba(0, 0, 0, 0.22);*/
            width: 80px;
            margin-bottom: 10px;
            text-align: center;
        }
        li a{
            color:#333;
        }
    </style>
</head>
<body class="fixed-header" style="background:url(/Content/assets/img/demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg);background-position:center;">
   
    <div class="login-wrapper ">
        <!-- START Login Background Pic Wrapper-->
        <div class="bg-pic">
   
            <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
                <h2 class="text-white">
                    Gimpy Softwares
                </h2>
                
            </div>
            <!-- END Background Caption-->
        </div>
        <div class="login-container bg-white">
            <div class="jumbotron" data-pages="parallax" >
                <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
                    <div class="inner">
                        <!-- START BREADCRUMB -->
                        <ul class="logincrumb" style="margin-right:20px"> 
                            <li style="margin-top:5px"><a  href="@Url.Action("Register","Account")">Register</a></li>
                            <li style="margin-top:5px"><a  href="@Url.Action("About", "Account")">About</a></li>
                            <li style="margin-top:5px"><a href="@Url.Action("Contact","Account")">Contact</a></li>
                            <li style="margin-top:5px"><a href="@Url.Action("Login","Account")">Login</a></li> 
                        </ul>
                        <!-- END BREADCRUMB -->
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $('#form-login').validate()
        })
    </script>
</body>
</html>